@model PetproShopConnection.SanPham
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}

<script src="~/Areas/AssetAdmin/js/product/previewFile.js"></script>

<style>
    input[type=text], select {
        width: 100%;
        background: #CCFFFF;
        color:black;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    input[type=number], select {
        width: 100%;
        color:black;
        background: #CCFFFF;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    input[type=submit] {
        width: 100%;
        background-color: #2a9fd6;
        color: black;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        input[type=submit]:hover {
            background-color: #4CAF50;
        }
</style>

@using (Html.BeginForm("Edit", "SanPhamAdmin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <table style="width:75%; margin:auto; background:white; color:black">
        <tr>
            <td>Mã Sản Phẩm</td>
            <td> <input style="width:300px; float:left; height:35px " maxlength="11" type="text" name="MaSP" required readonly value="@Model.MaSP" /></td>
            <td rowspan="13">
                <div>
                    <img id="target" class="img" src="~/Asset/images1/@Model.HinhChinh" alt="your image" style="float:right; width:320px; height:300px;" required>
                </div>
            </td>
        </tr>
        <tr>
            <td>Mã Loại Sản Phẩm</td>
            <td>@Html.DropDownList("MaLoaiSP", null, new { @style = "float:left; width:300px;" })</td>
        </tr>
        <tr>
            <td>Tên Sản Phẩm</td>
            <td><input style="width:300px; float:left; height:35px " type="text" name="TenSP" maxlength="11" required readonly value="@Model.TenSP" /></td>
        </tr>
        <tr>
            <td>Hình Chính</td>
            <td><input type="file" class="img" id="file_Hinh" name="HinhChinh" onchange="previewFile();" style="float:left" /></td>
        </tr>
        <tr>
            <td>Hình 1</td>
            <td><input type="file" id="file_Hinh1" name="Hinh1" style="float:left" /></td>
        </tr>
        <tr>
            <td>Hình 2</td>
            <td><input type="file" id="file_Hinh2" name="Hinh2" style="float:left" /></td>
        </tr>
        <tr>
            <td>Hình 3</td>
            <td><input type="file" id="file_Hinh3" name="Hinh3" style="float:left" /></td>
        </tr>
        <tr>
            <td>Hình 4</td>
            <td><input type="file" id="file_Hinh4" name="Hinh4" style="float:left" /></td>
        </tr>

        <tr>
            <td>Giá</td>
            <td><input style="width:300px; float:left; height:35px" type="number" name="Gia" required value="@Model.Gia"></td>
        </tr>
        <tr>
            <td>Mô tả</td>
            <td><input style="width:300px; float:left; height:35px" type="text" name="MoTa" required value="@Model.MoTa"></td>
        </tr>
        <tr>
            <td>Chức Năng</td>
            <td><input style="width:300px; float:left; height:35px" type="text" name="ChucNang" required value="@Model.ChucNang"></td>
        </tr>
        <tr>
            <td>Ghi Chú</td>
            <td><input style="width:300px; float:left; height:35px" type="text" name="GhiChu" required value="@Model.GhiChu"></td>
        </tr>
        <tr>
            <td>Nhà Sản Xuất</td>
            <td>@Html.DropDownList("MaNSX", null, new { @style = "float:left; width:300px;" })</td>
        </tr>
        <tr>
            <td colspan="3">
                <input style="height:40px; width:300px; margin-left:25%;
             background:#016ABC;color:#fff;border:1px solid #eee;border-radius:20px;box-shadow:5px 5px 5px #eee;" type="submit" name="btn_ThemSanPham" value="Xác Nhận Chỉnh Sửa" />

            </td>
        </tr>
    </table>
}





